@model IEnumerable<WebApplication.Models.Basketball>
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Future Games";
}

@{ if (ViewBag.Confirmed)
    {
        <h2>Index</h2>

        <p>
            @Html.ActionLink("Create New", "Create") |
            @Html.ActionLink("Passed Games", "Passed")
            @Html.ActionLink("Confirm New Users", "AspNetUser", "Index")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Time)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Venue)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                if (item.Passed != 1)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Time)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Venue)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            }

        </table>
    }
    else
    {
        <p>Not confirmed</p>
    }
    }
