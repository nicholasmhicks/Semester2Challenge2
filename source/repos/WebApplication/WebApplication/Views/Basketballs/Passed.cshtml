@model IEnumerable<WebApplication.Models.Basketball>

@{
    ViewBag.Title = "Passed Games";
}

@{ if (ViewBag.Confirmed)
    {

        <h2>Index</h2>

        <p>
            @Html.ActionLink("Create New", "Create") | @Html.ActionLink("Future Games", "Index")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Time)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Venue)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                if (item.Passed == 1)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Time)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Venue)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                        </td>
                    </tr>
                }

            }

        </table>

    }
    else
    {
        <p>Not confirmed</p>
    }
}
